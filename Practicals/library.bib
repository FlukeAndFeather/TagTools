month = {oct},
number = {1771},
pages = {20132090--20132090},
title = {{Differential reproductive responses to stress reveal the role of life-history strategies within a species}},
url = {http://rspb.royalsocietypublishing.org/content/280/1771/20132090.abstract.html?cpetoc},
volume = {280},
