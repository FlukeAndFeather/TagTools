month = {dec},
number = {1},
pages = {22--29},
pmid = {21147965},
title = {{Directional escape behavior in allis shad ({\textless}i{\textgreater}Alosa alosa{\textless}/i{\textgreater}) exposed to ultrasonic clicks mimicking an approaching toothed whale}},
