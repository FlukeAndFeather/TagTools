author = {MacLeod, C D and Reidenberg, J S and Weller, M and Santos, M B and Herman, J and Goold, J and Pierce, G J},
isbn = {1932-8494},
journal = {The Anatomical Record},
keywords = {sound generation,sound production},
number = {6},
pages = {539--545},
title = {{Breaking symmetry: The marine environment, prey size, and the evolution of asymmetry in cetacean skulls}},
