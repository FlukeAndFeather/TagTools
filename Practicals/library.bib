number = {6},
pages = {1365--1372},
title = {{Counterstrategies by female frogs to sexual coercion by heterospecifics}},
url = {http://www.sciencedirect.com/science/article/B6W9W-4XCH14W-1/2/665fe86516eb0b37201888de9a57026e},
volume = {78},
