@article{Madsen2005,
abstract = {Current mitigation levels for noise transients impinging on marine mammals are specified by rms pressures. The rms measure critically relies upon choosing the size of averaging window for the squared pressures. Derivation of this window is not standardized, which can lead to 2–12 dB differences in rms sound pressure for the same wave forms. rms pressure does not represent the energy of the noise pulse and it does not prevent exposure to high peak pressures. Safety levels for transients should therefore be given by received peak–peak sound pressure and energy flux density instead of rms sound pressure levels.},
author = {Madsen, Peter T},
journal = {Journal of the Acoustical Society of America},
