journal = {Veterinary Pathology},
keywords = {MFA,beaked whale,decompression sickness,embolism,noise,sonar},
number = {4},
pages = {446--457},
title = {{"Gas and fat embolic syndrome" involving a mass stranding of beaked whales (Family Ziphiidae) exposed to anthropogenic sonar signals}},
