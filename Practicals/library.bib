isbn = {0022-5193},
journal = {Journal of Theoretical Biology},
keywords = {imitation,mimicry},
number = {2},
pages = {241--253},
title = {{Singing is based on two markedly different kinds of signaling}},
url = {http://www.sciencedirect.com/science/article/B6WMD-4M3B2N2-8/2/3f355511a166900ccc7921960de154e8},
