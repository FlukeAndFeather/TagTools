isbn = {0001-4966},
journal = {Journal of the Acoustical Society of America},
keywords = {atlantic bottlenose dolphin,british-columbia,fish,hearing,porpoise,transmission beam pattern,tursiops-truncatus,waters},
number = {2},
pages = {901--909},
title = {{Echolocation signals of free-ranging killer whales (Orcinus orca) and modeling of foraging for chinook salmon (Oncorhynchus tshawytscha)}},
